    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "logfmt": "^1.4.0",
    "node-cache": "^5.1.2",
    "pm2": "^6.0.8",
    "redis": "^4.7.0",
    "winston": "^3.17.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
