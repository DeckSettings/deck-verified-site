{
  "name": "deck-verified-web",
  "version": "0.0.1",
  "description": "Deck Verified is an open-source, community-driven database of performance reports, settings, and tweaks for handheld gaming PCs like the Steam Deck, ROG Ally, and Legion Go.",
  "productName": "Deck Verified",
  "author": "Josh Sunnex <josh@wisealpha.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "echo \"No test specified\" && exit 0",
    "dev": "quasar dev",
    "dev:ssr": "quasar dev -m ssr",
    "dev:android": "quasar dev --mode capacitor --target android",
    "build": "quasar build -m spa",
    "build:ssr": "quasar build -m ssr",
    "build:android": "quasar build --mode capacitor --target android --ide"
  },
  "dependencies": {
    "@aparajita/capacitor-secure-storage": "^7.1.3",
    "@capacitor/app": "^7.1.0",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/core": "^7.4.3",
    "@fontsource/exo-2": "^5.1.1",
    "@quasar/extras": "^1.16.4",
    "axios": "^1.2.1",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.3",
    "gsap": "^3.13.0",
    "logfmt": "^1.4.0",
    "marked": "^15.0.4",
    "pinia": "^2.0.11",
    "quasar": "^2.16.0",
    "quasar-extras-svg-icons": "^2.1.1",
    "vue": "^3.4.18",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.0.12",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.3",
    "@eslint/js": "^9.14.0",
    "@intlify/unplugin-vue-i18n": "^2.0.0",
    "@quasar/app-vite": "^2.0.0",
    "@types/gsap": "^1.20.2",
    "@types/logfmt": "^1.2.6",
    "@types/node": "^20.5.9",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "autoprefixer": "^10.4.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.8.0",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
